<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.citybank.scenes.LoginFormController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
         <children>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <AnchorPane prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #f9f9f9; -fx-background-radius: 10;">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label alignment="CENTER" text="Login" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="36.0" />
                           </font>
                        </Label>
                        <Region layoutX="10.0" layoutY="284.0" prefHeight="20.0" prefWidth="263.0" />
                        <TextField fx:id="username" promptText="Enter Username" styleClass="primary">
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                        <PasswordField fx:id="password" promptText="Enter Password">
                           <VBox.margin>
                              <Insets left="30.0" right="30.0" top="10.0" />
                           </VBox.margin>
                        </PasswordField>
                        <Button fx:id="signInButton" mnemonicParsing="false" onAction="#authenticate" styleClass="butt" text="Sign in">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </Button>
                        <Label fx:id="errorText" alignment="CENTER" textAlignment="CENTER" textFill="#ee2727">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Region prefHeight="44.0" prefWidth="263.0" />
                        <Label alignment="CENTER" contentDisplay="TOP" text="Forgot password? Ask your manager to reset it. :)" textAlignment="CENTER" wrapText="true">
                           <font>
                              <Font name="Courier New" size="12.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets left="20.0" right="20.0" />
                           </padding>
                        </Label>
                     </children>
                  </VBox>
               </children></AnchorPane>
            <Region layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</AnchorPane>
